import tkinter as tk
from tkinter import ttk
from tkinter import messagebox

trabajadores = []

def guardar_trabajador():
    trabajador = {
        "Nombre": entry_nombre.get(),
        "Fecha de nacimiento": entry_nacimiento.get(),
        "Puesto": entry_puesto.get(),
        "Sexo": entry_sexo.get(),
        "Grado de estudios": entry_grado.get(),
        "Cédula profesional": entry_cedula.get(),
        "Domicilio": entry_domicilio.get(),
        "Teléfono": entry_telefono.get(),
        "Correo": entry_correo.get(),
        "Fecha de ingreso": entry_ingreso.get()
    }

    for campo, valor in trabajador.items():
        if not valor:
            messagebox.showwarning("Campo vacío", f"Por favor complete el campo: {campo}")
            return

    trabajadores.append(trabajador)
    messagebox.showinfo("Éxito", "Trabajador registrado con éxito.")
    limpiar_campos()

def limpiar_campos():
    for entrada in entradas:
        entrada.delete(0, tk.END)

def mostrar_trabajadores():
    if not trabajadores:
        messagebox.showinfo("Sin registros", "No hay trabajadores registrados.")
        return

    ventana = tk.Toplevel(root)
    ventana.title("Lista de trabajadores")

    columnas = list(trabajadores[0].keys())
    tree = ttk.Treeview(ventana, columns=columnas, show="headings")

    for columna in columnas:
        tree.heading(columna, text=columna)
        tree.column(columna, width=120)

    for t in trabajadores:
        tree.insert("", tk.END, values=list(t.values()))

    tree.pack(padx=10, pady=10, fill='x')

root = tk.Tk()
root.title("Registro del trabajador")
root.geometry("450x600")

etiquetas = [
    "Nombre", "Fecha de nacimiento", "Puesto", "Sexo",
    "Grado de estudios", "Cédula profesional (Sí/No)",
    "Domicilio", "Teléfono", "Correo", "Fecha de ingreso"
]

entradas = []
for texto in etiquetas:
    tk.Label(root, text=texto + ":").pack()
    entrada = tk.Entry(root)
    entrada.pack()
    entradas.append(entrada)

entry_nombre, entry_nacimiento, entry_puesto, entry_sexo, entry_grado, \
entry_cedula, entry_domicilio, entry_telefono, entry_correo, entry_ingreso = entradas

tk.Button(root, text="Guardar trabajador", command=guardar_trabajador).pack(pady=10)
tk.Button(root, text="Mostrar trabajadores", command=mostrar_trabajadores).pack(pady=5)

root.mainloop()
